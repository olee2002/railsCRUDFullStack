<h2><%= @team.name %></h2>
<hr>
<%= link_to "Edit", edit_team_path(@team), :class=>'btn btn-primary' %>

<%= link_to "Delete", team_path(@team), 
method: :delete,
data: {confirm: 'Are you sure?'},
:class=>'btn btn-danger' %>

<hr>
<h3>Member Sign-Up</h3>
<%= form_for([@team, @team.members.build]) do |f| %>
    <p>
        <%= f.label :first_name %>
        <%= f.text_field(:first_name, {:class=>'form-control'}) %>
    </p>
    <p>
        <%= f.label :last_name %>
        <%= f.text_field(:last_name, {:class=>'form-control'}) %>
    </p>
    <p>
        <%= f.label :age %>
        <%= f.text_field(:age, {:class=>'form-control'}) %>
    </p>
    <p>
        <%= f.label :email %>
        <%= f.text_field(:email, {:class=>'form-control'}) %>
    </p>
    <p>
        <%= f.label :phone_numbers %>
        <%= f.text_field(:phone_numbers, {:class=>'form-control'}) %>
    </p>
        <%= f.submit({:class=>'btn btn-primary'}) %>
<%end%>